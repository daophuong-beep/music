<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentbanner"
            android:name="com.example.music.Fragment.Fragment_Banner"

            />
        <fragment
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/fragmentplaylist"
            android:name="com.example.music.Fragment.Fragment_Playlist"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentchudetheloai"
            android:name="com.example.music.Fragment.Fragment_Chude_Theloai_Today"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentalbumhot"
            android:name="com.example.music.Fragment.Fragment_Album_Hot"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentbaihathot"
            android:name="com.example.music.Fragment.Fragment_BaiHat_Hot"
            />

    </LinearLayout>

</ScrollView>